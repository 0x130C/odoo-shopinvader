<odoo>

    <record model="ir.ui.view" id="invader_entrypoint_form_view">
        <field name="name">invader.entrypoint.form (in base_invader)</field>
        <field name="model">invader.entrypoint</field>
        <field name="arch" type="xml">
           <form string="Invader REST Services Entry point">
           <sheet>
                <label for="name" class="oe_edit_only"/>
                <h1>
                    <field name="name" class="oe_inline" />
                </h1>
                <notebook>
                    <page name="config" string="Configuration">
                        <group name="config" colspan="4" col="4">
                            <field name="collection" colspan="4"/>
                            <field name="api_key" colspan="4"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <record model="ir.ui.view" id="invader_entrypoint_tree_view">
        <field name="name">invader.entrypoint.tree (in base_invader)</field>
        <field name="model">invader.entrypoint</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="collection"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="invader_entrypoint_act_window">
        <field name="name">Invader Services Entry points</field>
        <field name="res_model">invader.entrypoint</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="invader_entrypoint_menu">
        <field name="name">Invader Services Entry points</field>
        <field name="parent_id" ref="base.menu_custom"/>
        <field name="action" ref="invader_entrypoint_act_window"/>
        <field name="sequence" eval="100"/>
    </record>

</odoo>
